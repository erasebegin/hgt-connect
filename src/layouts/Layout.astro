---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="description"
            content="Get in contact with Heard Good Things or explore our work"
        />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/x-icon" href="/hgt_logo.ico" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body class="bg-blue-100">
        <slot />
    </body>
</html>

<style is:global>
    @font-face {
        font-family: "moonblossom";
        src: url("/fonts/moonblossom.otf") format("opentype");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
    }

    body {
        font-family: "moonblossom", sans-serif; /* Apply the custom font to the body or any applicable element */
    }
</style>
